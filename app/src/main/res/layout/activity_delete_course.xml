<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DeleteCourseActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/delCrs_coursesList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delCrs_coursesList">

        <Button
            android:id="@+id/delCrs_b_delete"
            style="@style/Nafea_DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/buttonText_delete" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <Button
            android:id="@+id/delCrs_b_cancel"
            style="@style/Nafea_DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/buttonText_cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>