<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.course.ematerial.UploadEMaterialPage">

    <Button
        android:id="@+id/upButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="رفع"
        app:layout_constraintBottom_toTopOf="@+id/cancelUButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelUButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="إلغاء"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/upButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matView"
                android:layout_width="173dp"
                android:layout_height="55dp"
                android:text="نوع المحتوى:"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerType"
                android:entries="@array/Types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/DocView"
                android:layout_width="273dp"
                android:layout_height="68dp"
                android:hint="Video Link"
                android:text="اسم المحتوى:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/matName"
                android:layout_width="357dp"
                android:layout_height="47dp"
                android:ems="10"
                android:hint="إختبار ريض 244"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/choose_file_btn"
                android:layout_width="117dp"
                android:layout_height="45dp"
                android:text="إختيار ملف" />

            <TextView
                android:id="@+id/path_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/VideoLink"
                android:layout_width="201dp"
                android:layout_height="49dp"
                android:text="الرابط :"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/vLink"
                android:layout_width="229dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="ضع الرابط هنا
"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>