<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Nafea_DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#03A9F4</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Nafea_DefaultTextView" parent="Widget.AppCompat.TextView">

    </style>
    <style name="Nafea_DefaultEditText" parent="Widget.AppCompat.EditText">

    </style>
    <style name="Nafea_TextButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FF2B80FF</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Nafea_DefaultCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
    </style>

</resources>